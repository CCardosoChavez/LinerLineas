
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<div id="dvSeccionesControlSaldos" class="seccionesControlSaldos">
    <div id="dvControlSaldos" class="controlSaldos">
        <div class="cardHeader criteriosBusqueda">
            <h2>Devolución Depositos en Garantía</h2>
            <h3 id="h3Contenedor"></h3>
            <div class="fila3Columnas  marginBottom5Px paddingLeft15Px">
                <div class="dvElementos">
                    <input type="text" id="txtBusqueda" placeholder="BL / Referencia / Cliente" />
                </div>
                <div class="dvElementos enLinea">
                    <label>Desde</label>
                    <input type="date" id="txtDesde" value="" title="Desde" />

                </div>
                <div class="dvElementos enLinea">
                    <label>Hasta</label>
                    <input type="date" id="txtHasta" value="" title="Hasta" />
                </div>
            </div>
        </div>
        <br />
        <div class="cardTabla">
            <table id="tContenedores" class=" table table-bordered table-responsive">
                <thead>
                    <tr>
                        <td class="centrarColumna">BL</td>
                        <td class="centrarColumna" hidden>nIdReferencia</td>
                        <td class="centrarColumna">REFERENCIA</td>
                        <td class="centrarColumna" hidden>nIdCliente</td>
                        <td class="centrarColumna">CLIENTE</td>
                        <td class="centrarColumna" hidden>IdLinea</td>
                        <td class="centrarColumna">LINEA</td>
                        <td class="centrarColumna">ITINERARIO</td>
                        <td class="centrarColumna">PAGO DE REMEAS</td>
                        <td class="centrarColumna">TIPO CAMBIO</td>
                        <td class="centrarColumna">MONTO MXN</td>
                        <td class="centrarColumna">MONTO USD</td>
                        <td class="centrarColumna" hidden>FECHA DE PAGO DE REMESA</td>
                        <td class="centrarColumna" hidden>VOUCHER</td>
                        <td class="centrarColumna">FECHA DE SOLICITUD DEVOLUCION</td>
                        <td class="centrarColumna">FECHA DE DEVOLUCION</td>
                        <td class="centrarColumna">ESTATUS DEVOLUCION</td>
                        <td class="centrarColumna">DEVOLVER</td>
                    </tr>
                </thead>
                <tbody id="tbContenedores">
                </tbody>
            </table>
            <div id="dvSpinner" class="centrar invisibilidad">
                <i class="fa fa-spinner fa-spin spinnerIcon"></i>
            </div>
        </div>
    </div>
</div>

